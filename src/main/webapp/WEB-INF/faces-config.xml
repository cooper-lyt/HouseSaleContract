<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <component>
        <component-type>com.dgsoft.faces.EntryColumn</component-type>
        <component-class>com.dgsoft.faces.component.UIEntryColumn</component-class>
    </component>
    <component>
        <component-type>com.dgsoft.faces.EntryGridBlock</component-type>
        <component-class>com.dgsoft.faces.component.UIEntryGridBlock</component-class>
    </component>
    <component>
        <component-type>com.dgsoft.faces.EntryPanelGrid</component-type>
        <component-class>com.dgsoft.faces.component.UIEntryPanelGrid</component-class>
    </component>

    <component>
        <component-type>com.dgsoft.faces.Switch</component-type>
        <component-class>com.dgsoft.faces.component.UISwitch</component-class>
    </component>

    <render-kit>
        <render-kit-id>HTML_BASIC</render-kit-id>
        <renderer>
            <component-family>com.dgsoft.faces.EntryGrid</component-family>
            <renderer-type>com.dgsoft.faces.render.EntryColumn</renderer-type>
            <renderer-class>com.dgsoft.faces.renderkit.html.EntryColumnRender</renderer-class>
        </renderer>
        <renderer>
            <component-family>com.dgsoft.faces.EntryGrid</component-family>
            <renderer-type>com.dgsoft.faces.render.EntryGridBlock</renderer-type>
            <renderer-class>com.dgsoft.faces.renderkit.html.EntryGridBlockRender</renderer-class>
        </renderer>
        <renderer>
            <component-family>com.dgsoft.faces.EntryGrid</component-family>
            <renderer-type>com.dgsoft.faces.render.EntryPanelGrid</renderer-type>
            <renderer-class>com.dgsoft.faces.renderkit.html.EntryPanelGridRender</renderer-class>
        </renderer>
        <renderer>
            <component-family>com.dgsoft.faces.BootStrap</component-family>
            <renderer-type>com.dgsoft.faces.render.SWitch</renderer-type>
            <renderer-class>com.dgsoft.faces.renderkit.html.SwitchRender</renderer-class>
        </renderer>
    </render-kit>

    <converter>
        <description>Converter for Enums</description>
        <converter-id>enumConverter</converter-id>
        <converter-class>org.jboss.seam.ui.converter.EnumConverter</converter-class>
    </converter>

   <application>
      <locale-config>
         <default-locale>zh_CN</default-locale>
         <supported-locale>bg</supported-locale>
         <supported-locale>de</supported-locale>
         <supported-locale>en</supported-locale>
         <supported-locale>fr</supported-locale>
         <supported-locale>it</supported-locale>
         <supported-locale>tr</supported-locale>
         <supported-locale>da</supported-locale>
         <supported-locale>zh_CN</supported-locale>
      </locale-config>
   </application>

</faces-config>
